{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es6",
    "module": "esnext"
  },
  "exclude": [
    "node_modules"
  ]
}